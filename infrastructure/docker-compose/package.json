{
  "author": "Jackson Delahunt <jackson@jacksondelahunt.com>",
  "description": "The Cloud Computer Docker-Compose Configuration",
  "license": "MIT",
  "name": "@cloud-computer/docker-compose",
  "repository": "git@github.com:cloud-computer/cloud-computer.git",
  "scripts": {
    "compose": "scripts/compose.sh",
    "compose:down": "yarn compose -f stacks/$STACK.yaml down",
    "compose:up": "yarn compose -f stacks/$STACK.yaml up --detach --quiet-pull",
    "down": "yarn down:code & yarn down:desktop & yarn down:grafana & yarn down:traefik & yarn down:jaeger & yarn down:terminal",
    "down:blender": "STACK=blender yarn compose:down",
    "down:chrome": "STACK=chrome yarn compose:down",
    "down:cloudstorage": "STACK=cloudstorage yarn compose:down",
    "down:code": "STACK=code yarn compose:down",
    "down:desktop": "STACK=desktop yarn compose:down",
    "down:dispatch": "STACK=dispatch yarn compose:down",
    "down:filerun": "STACK=filerun yarn compose:down",
    "down:grafana": "STACK=grafana yarn compose:down",
    "down:jaeger": "STACK=jaeger yarn compose:down",
    "down:krita": "STACK=krita yarn compose:down",
    "down:launcher": "STACK=launcher yarn compose:down",
    "down:onlyoffice": "STACK=onlyoffice yarn compose:down",
    "down:terminal": "STACK=terminal yarn compose:down",
    "down:traefik": "STACK=traefik yarn compose:down",
    "down:webapp": "STACK=webapp yarn compose:down",
    "down:windows": "STACK=windows yarn compose:down",
    "restart": "yarn down:$1; yarn up:$1",
    "restart:blender": "yarn down:blender; yarn up:blender",
    "restart:chrome": "yarn down:chrome; yarn up:chrome",
    "restart:cloudstorage": "yarn down:cloudstorage; yarn up:cloudstorage",
    "restart:code": "yarn down:code; yarn up:code",
    "restart:desktop": "yarn down:desktop; yarn up:desktop",
    "restart:dispatch": "yarn down:dispatch; yarn up:dispatch",
    "restart:filerun": "yarn down:filerun; yarn up:filerun",
    "restart:grafana": "yarn down:grafana; yarn up:grafana",
    "restart:jaeger": "yarn down:jaeger; yarn up:jaeger",
    "restart:krita": "yarn down:krita; yarn up:jaeger",
    "restart:launcher": "yarn down:launcher; yarn up:launcher",
    "restart:onlyoffice": "yarn down:onlyoffice; yarn up:onlyoffice",
    "restart:terminal": "yarn down:terminal; yarn up:terminal",
    "restart:traefik": "yarn down:traefik; yarn up:traefik",
    "restart:webapp": "yarn down:webapp; yarn up:webapp",
    "restart:windows": "yarn down:windows; yarn up:windows",
    "up": "ls stacks | grep -E 'blender|chrome|cloudstorage|code|desktop|krita|launcher|marketplace|onlyoffice|skype|terminal|traefik' | xargs -n 1 -I @ -P 8 yarn compose -f stacks/@ up --detach --quiet-pull",
    "up:blender": "STACK=blender yarn compose:up",
    "up:chrome": "STACK=chrome yarn compose:up",
    "up:cloudstorage": "STACK=cloudstorage yarn compose:up",
    "up:code": "STACK=code yarn compose:up",
    "up:desktop": "STACK=desktop yarn compose:up",
    "up:dispatch": "STACK=dispatch yarn compose:up",
    "up:filerun": "STACK=filerun yarn compose:up",
    "up:grafana": "STACK=grafana yarn compose:up",
    "up:jaeger": "STACK=jaeger yarn compose:up",
    "up:krita": "STACK=krita yarn compose:up",
    "up:launcher": "STACK=launcher yarn compose:up",
    "up:onlyoffice": "STACK=onlyoffice yarn compose:up",
    "up:terminal": "STACK=terminal yarn compose:up",
    "up:traefik": "STACK=traefik yarn compose:up",
    "up:webapp": "STACK=webapp yarn compose:up",
    "up:windows": "STACK=windows yarn compose:up"
  },
  "version": "0.0.1"
}
